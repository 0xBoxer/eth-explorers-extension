{
  "manifest_version": 2,
  "name": "ETH Txn Explorers",
  "version": "1.0",
  "description": "Select mainnet transaction hash and view it on various popular Ethereum blockchain explorers",
  "icons": {
    "128": "./icons/icon128.png",
    "48": "./icons/icon48.png",
    "16": "./icons/icon16.png"
  },
  "background": {
    "scripts": ["eventPage.js"]
  },
  "permissions": ["contextMenus"],
  "browser_specific_settings": {
    "gecko": {
      "id": "txn@eth-explorers-extension"
    }
  }
}
