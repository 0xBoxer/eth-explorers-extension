{
  "manifest_version": 2,
  "name": "ETH Address Explorers",
  "version": "1.0",
  "description": "Select Ethereum address and view it on various popular blockchain explorers and dashboards.",
  "icons": {
    "128": "./icons/icon128.png",
    "48": "./icons/icon48.png",
    "16": "./icons/icon16.png"
  },
  "background": {
    "scripts": ["eventPage.js"]
  },
  "permissions": ["contextMenus"],
  "browser_specific_settings": {
    "gecko": {
      "id": "address@eth-explorers-extension"
    }
  }
}
